<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.bangarlabdynamicnavigation.BangarlabDynamicNavigation" pluginWidget="true"
    needsEntityContext="true" offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Bangarlab Dynamic Navigation</name>
    <description>Dynamic role-based navigation with nested set model for SyMenu</description>
    <icon>
        </icon>

    <properties>
        <!-- <propertyGroup caption="General">
            <property key="sampleText" type="string" required="false">
                <caption>Default value</caption>
                <description>Sample text input</description>
            </property>
        </propertyGroup> -->

        <!-- 데이터 소스 -->
        <propertyGroup caption="Data Source">
            <property key="menuDataSource" type="datasource" isList="true" required="true">
                <caption>Menu Data Source</caption>
                <description>List of menu items from microflow</description>
            </property>

            <property key="currentUser" type="object" isList="true" required="false">
                <caption>Current User</caption>
                <description>Current logged-in user object</description>
                <properties />
            </property>
            <property key="Resource" type="datasource" isList="true" required="true">
                <caption>Resource Data Source</caption>
                <description>List of Resource items from microflow</description>
            </property>
        </propertyGroup>

        <!-- Layout Configuration -->
        <propertyGroup caption="Layout">
            <property key="layout" type="enumeration" defaultValue="vertical">
                <caption>Navigation Layout</caption>
                <description>Choose navigation layout style</description>
                <enumerationValues>
                    <enumerationValue key="vertical">Vertical (Sidebar)</enumerationValue>
                    <enumerationValue key="horizontal">Horizontal (Topbar)</enumerationValue>

                </enumerationValues>
            </property>

            <property key="position" type="enumeration" defaultValue="left">
                <caption>Navigation Position</caption>
                <description>Position of navigation menu</description>
                <enumerationValues>
                    <enumerationValue key="left">Left Side</enumerationValue>
                    <enumerationValue key="top">Top</enumerationValue>
                </enumerationValues>
            </property>

            <property key="sidebarWidth" type="string" defaultValue="260px">
                <caption>Sidebar Width</caption>
                <description>Width of sidebar (e.g., 260px, 20%)</description>
            </property>

            <property key="topbarHeight" type="string" defaultValue="60px">
                <caption>Topbar Height</caption>
                <description>Height of topbar (e.g., 60px)</description>
            </property>

            <property key="collapsible" type="boolean" defaultValue="true">
                <caption>Collapsible</caption>
                <description>Allow sidebar to collapse</description>
            </property>
        </propertyGroup>

        <!-- Behavior -->
        <propertyGroup caption="Behavior">
            <property key="onMenuClick" type="action" required="true">
                <caption>On Menu Click</caption>
                <description>Action when menu item is clicked</description>
            </property>

            <property key="onAuthFailed" type="action" required="false">
                <caption>On Authorization Failed</caption>
                <description>Action when user lacks permission</description>
            </property>

            <property key="expandedByDefault" type="boolean" defaultValue="false">
                <caption>Expanded by Default</caption>
                <description>Expand all menus on load</description>
            </property>

            <property key="autoExpandActivePath" type="boolean" defaultValue="true">
                <caption>Auto Expand Active Path</caption>
                <description>Automatically expand path to active menu</description>
            </property>

            <property key="maxDepth" type="integer" defaultValue="2">
                <caption>Max Depth</caption>
                <description>Maximum menu depth (0-2 for 3 levels)</description>
            </property>

            <property key="enableDynamicAuth" type="boolean" defaultValue="false">
                <caption>Enable Dynamic Authorization</caption>
                <description>Check permissions dynamically</description>
            </property>
        </propertyGroup>

        <!-- Appearance -->
        <propertyGroup caption="Appearance">
            <property key="themeColor" type="string" defaultValue="#1890ff">
                <caption>Theme Color</caption>
                <description>Primary color for active states</description>
            </property>

            <property key="showDepthIndicator" type="boolean" defaultValue="false">
                <caption>Show Depth Indicator</caption>
                <description>Display depth level (for debugging)</description>
            </property>

            <property key="animationDuration" type="integer" defaultValue="300">
                <caption>Animation Duration</caption>
                <description>Duration of animations in milliseconds</description>
            </property>

            <property key="customClass" type="string" required="false">
                <caption>Custom CSS Class</caption>
                <description>Additional CSS class for styling</description>
            </property>
        </propertyGroup>

        <!-- Advanced -->
        <propertyGroup caption="Advanced">
            <property key="enableKeyboardNav" type="boolean" defaultValue="true">
                <caption>Enable Keyboard Navigation</caption>
                <description>Support keyboard shortcuts</description>
            </property>

            <property key="cacheDuration" type="integer" defaultValue="300000">
                <caption>Cache Duration (ms)</caption>
                <description>Menu cache duration (default: 5 minutes)</description>
            </property>

            <property key="debugMode" type="boolean" defaultValue="false">
                <caption>Debug Mode</caption>
                <description>Enable debug logging</description>
            </property>
        </propertyGroup>


    </properties>
</widget>